
@{
    ViewData["Title"] = "Add Manual";
}
<h1>Add Manual</h1>

<hr />

<div class="row d-flex justify-content-center">
    <div class="col-8 card align-items-center p-3">
        <form method="post" enctype="multipart/form-data" asp-controller="Manual" asp-action="ManualUpload">
            <div class="form-group">
                <div class="col-md-10">
                    <h3>Upload a manual</h3>
                    <input type="file" name="file" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload"/>
                </div>
            </div>
        </form>
    </div>
</div>